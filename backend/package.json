{
    "name": "backend",
    "version": "0.0.0",
    "type": "module",
    "main": "dist/main.js",
    "scripts": {
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "prettier": "prettier --write \"**/*.+(ts|js|json|md)\"",
        "prettier-check": "prettier --check \"**/*.+(ts|js|json|md)\"",
        "pretty": "npm run prettier && npm run lint-fix",
        "type-check": "tsc -p tsconfig.json -noEmit",
        "build": "rimraf ./dist && npm run type-check && rollup -c",
        "watch": "rimraf ./dist && npm run type-check && rollup -c -w",
        "dev": "node --watch ./dist/main.js",
        "start": "node ./dist/main.js"
    },
    "author": "NFSS10",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^5.0.0-beta.3",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@typescript-eslint/eslint-plugin": "^7.12.0",
        "@typescript-eslint/parser": "^7.12.0",
        "esbuild": "^0.21.5",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.3.1",
        "rimraf": "^5.0.7",
        "rollup": "^4.18.0",
        "rollup-plugin-esbuild": "^6.1.1",
        "rollup-plugin-tsconfig-paths": "^1.5.2",
        "typescript": "^5.4.5"
    }
}
