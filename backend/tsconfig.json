{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../shared/*"]
        },
        "outDir": "./dist",
        "module": "es2022",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["declarations.d.ts", "src/**/*", "types/**/*"],
    "exclude": ["node_modules"]
}
